<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2EJERCICIO1_1.MainPage">

    <StackLayout>
        
        <Label Text="Numero 1"  Padding="30,10,30,10"/>
       
        <Entry Keyboard="Numeric" 
                   x:Name="txtN1" 
                   BackgroundColor="White"/>

        <Label Text="Numero 2"  Padding="30,10,30,10"/>

        <Entry Keyboard="Numeric" 
                   x:Name="txtN2" 
                   BackgroundColor="White"/>

        <Button Text="Suma" x:Name="btnSuma" Margin="10,0,10,0" />

        <Button Text="Resta" x:Name="btnResta" Margin="10,0,10,0" />

        <Button Text="Multiplicacion" x:Name="btnMulti" Margin="10,0,10,0" />

        <Button Text="Division" x:Name="btnDiv" Margin="10,0,10,0" />
        
    </StackLayout>

</ContentPage>
